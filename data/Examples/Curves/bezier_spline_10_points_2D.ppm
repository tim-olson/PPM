// Name: Bezier_10pt_2D.ppm
// Description: Creates a 2-D Bezier spline in the XY plane from ten editable
//              control points (P0..P9) and sets the spline type to Bezier.
// Author: PPM Assistant
// Date: 2025-10-13
// Notes: Exposes 20 coordinate parameters. Confirmed: +0

// --- Units ---
Units(1[in]);           // Script works in inches

// --- Parameters (10 control points) ---
P0X = Parameter("P0 X", 0.0, LINEAR, Interval(-100,100));
P0Y = Parameter("P0 Y", 0.0, LINEAR, Interval(-100,100));

P1X = Parameter("P1 X", 1.0, LINEAR, Interval(-100,100));
P1Y = Parameter("P1 Y", 2.0, LINEAR, Interval(-100,100));

P2X = Parameter("P2 X", 2.0, LINEAR, Interval(-100,100));
P2Y = Parameter("P2 Y", 3.0, LINEAR, Interval(-100,100));

P3X = Parameter("P3 X", 3.0, LINEAR, Interval(-100,100));
P3Y = Parameter("P3 Y", 2.5, LINEAR, Interval(-100,100));

P4X = Parameter("P4 X", 4.0, LINEAR, Interval(-100,100));
P4Y = Parameter("P4 Y", 1.5, LINEAR, Interval(-100,100));

P5X = Parameter("P5 X", 5.0, LINEAR, Interval(-100,100));
P5Y = Parameter("P5 Y", 0.5, LINEAR, Interval(-100,100));

P6X = Parameter("P6 X", 6.0, LINEAR, Interval(-100,100));
P6Y = Parameter("P6 Y", -0.5, LINEAR, Interval(-100,100));

P7X = Parameter("P7 X", 7.0, LINEAR, Interval(-100,100));
P7Y = Parameter("P7 Y", -1.0, LINEAR, Interval(-100,100));

P8X = Parameter("P8 X", 8.0, LINEAR, Interval(-100,100));
P8Y = Parameter("P8 Y", -0.5, LINEAR, Interval(-100,100));

P9X = Parameter("P9 X", 9.0, LINEAR, Interval(-100,100));
P9Y = Parameter("P9 Y", 0.0, LINEAR, Interval(-100,100));

// --- Input (enables reuse as a macro) ---
Input(
  P0X,P0Y, P1X,P1Y, P2X,P2Y, P3X,P3Y, P4X,P4Y,
  P5X,P5Y, P6X,P6Y, P7X,P7Y, P8X,P8Y, P9X,P9Y
);

// --- Build geometry ---
Q0 = Point(P0X, P0Y);
Q1 = Point(P1X, P1Y);
Q2 = Point(P2X, P2Y);
Q3 = Point(P3X, P3Y);
Q4 = Point(P4X, P4Y);
Q5 = Point(P5X, P5Y);
Q6 = Point(P6X, P6Y);
Q7 = Point(P7X, P7Y);
Q8 = Point(P8X, P8Y);
Q9 = Point(P9X, P9Y);

// Create a spline that passes through all 10 points
SPL = Spline(Q0,Q1,Q2,Q3,Q4,Q5,Q6,Q7,Q8,Q9);

// --- Properties ---
// $SPLINETYPE = 1 forces TurboCAD to evaluate the curve as a Bezier spline
Bezier10 = SetProperties(
  SPL,
  "$SPLINETYPE" = 1,
  "PenColor"    = "Red",   // simple visual styling
  "PenWidth"    = 0.02
);

// --- Output ---
Output(Bezier10);